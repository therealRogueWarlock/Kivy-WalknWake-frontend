#: import COLOUR theme.Colours
#: import ICON theme.Icons
#: import RESOLUTION theme.Size
#: include views/components/back_button.kv
#: include views/components/header.kv
#: include views/components/background.kv
<NewAlarm>:
    Background:
        Header:
            id: Header

        # Time Picker
        MDIconButton:
            icon: 'arrow-left' # ICON.BACK

        # Day Selector
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            spacing: '24px'
            adaptive_size: True

            DayButton:
                id: Monday
                text: 'M'

                on_press:
					root.toggle('Monday')

            DayButton:
                id: Tuesday
                text: 'T'

                on_press:
					root.toggle('Tuesday')

            DayButton:
                id: Wednesday
                text: 'W'

                on_press:
					root.toggle('Wednesday')

            DayButton:
                id: Thursday
                text: 'T'

                on_press:
					root.toggle('Thursday')

            DayButton:
                id: Friday
                text: 'F'

                on_press:
					root.toggle('Friday')

            DayButton:
                id: Saturday
                text: 'S'

                on_press:
					root.toggle('Saturday')

            DayButton:
                id: Sunday
                text: 'S'

                on_press:
					root.toggle('Sunday')

        # Cancel
        IconButton:
            icon: 'close' # ICON.CANCEL
            pos: (536, 24)

            on_press:
                root.manager.transition.direction = 'down'
                root.manager.current = 'alarms'

        # Confirm
        BackButton:
            icon: 'check' # ICON.CONFIRM

            on_press:
                root.save_alarm()
                root.manager.transition.direction = 'down'
                root.manager.current = 'alarms'
