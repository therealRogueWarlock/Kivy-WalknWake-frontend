#: import COLOUR theme.Colour
#: import ICON theme.Icons
#: import FONTSIZE theme.Text
#: import RESOLUTION theme.Size
<Home>:
    Background:
        id: Background

        # Current Time
        Header:
            id: CurrentTime

        # Label
        MDLabel:
            id: Date
            pos: (120, 320)

            font_style: 'H6'
            text_size: self.size

        MDBoxLayout:
            orientation: 'horizontal'
            pos: (20, 20)
            adaptive_height: True
            size_hint_max: (200, None)

            # Next
            MDLabel:
                text: 'Next: '
                font_style: 'Subtitle1'
                theme_text_color: 'Custom'
                text_color: COLOUR.ACCENT
                bold: True

                halign: 'right'
                size_hint_max_x: 64

            # Next Alarm
            MDLabel:
                id: NextAlarm

                font_style: 'Subtitle1'
                theme_text_color: 'Custom'
                text_color: COLOUR.ACCENT
                italic: True

        # Settings
        IconButton:
            id: Settings
            
            # text: 'Settings'
            icon: ICON.SETTINGS
            
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'settings'