#:kivy
#:include views/components/back_button.kv
#:include views/components/background.kv
#:include views/components/header.kv
<Settings>:
    Background:
        Header:
            id: Header

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.3,'center_y': 0.4}
            spacing: '32px'
            adaptive_size: True

            MDTextButton:
                text: 'Alarms'
                font_style: 'H4'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'alarms'

            MDTextButton:
                text: 'Timezone'
                font_style: 'H4'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'time_settings'

            MDTextButton:
                text: 'Wifi'
                font_style: 'H4'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'wifi_settings'

        BackButton:
            icon: 'home' # Home

            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'home'

        # Debug Button
        Button:
            text: 'Camera'
            size_hint_max: (64, 64)
            pos: (32, 32)

            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'wakeup'
