# ===========================
# This screen just refuses to
# work with Window.clearcolor
# ===========================

<Settings>:
    Background:
        Header:
            id: Header

        BoxLayout:
            orientation: 'vertical'
            pos: (200, 60)
            size_hint_max: (300, 240)

            Button:
                id: Alarms

                text: 'Alarms'
                font_size: FONTSIZE.NM
                color: COLOUR.PRIMARY
                background_color: COLOUR.INVISIBLE

                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'alarms'

            Button:
                id: Time

                text: 'Timezone'
                font_size: FONTSIZE.NM
                color: COLOUR.PRIMARY
                background_color: COLOUR.INVISIBLE

                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'time_settings'

            Button:
                id: Wifi

                text: 'Wifi'
                font_size: FONTSIZE.NM
                color: COLOUR.PRIMARY
                background_color: COLOUR.INVISIBLE

                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'wifi_settings'

        # Back
        BackButton:
            background_normal: ICON.HOME

            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'home'

        # Debug Button
        Button:
            text: 'Camera'
            size_hint_max: (32, 32)
            pos: (32, 32)

            on_release:
                root.manager.transition.direction = 'up'
                root.manager.current = 'camera'
