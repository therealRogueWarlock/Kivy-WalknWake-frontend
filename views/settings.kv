#:kivy 1.0
#: import COLOUR theme.Colour
#: import ICON theme.Icons
#: import FONTSIZE theme.Text
#: import RESOLUTION theme.Size
<Settings>:
    FloatLayout:
        id: Background

        canvas:
            Color:
                rgb: COLOUR.BACKGROUND

            Rectangle:
                pos: (0, 0)
                size: (RESOLUTION.WIDTH, RESOLUTION.HEIGHT)

        Label:
            id: Header
            pos: (-224, 144)

            text: 'Settings'
            font_size: FONTSIZE.XL
            color: COLOUR.PRIMARY

        BoxLayout:
            orientation: 'vertical'
            pos: (200, 60)
            size_hint_max: (300, 240)

            Label:
                id: Alarms

                text: 'Alarms'
                font_size: FONTSIZE.NM
                color: COLOUR.PRIMARY

            Label:
                id: Time

                text: 'Timezone'
                font_size: FONTSIZE.NM
                color: COLOUR.PRIMARY

            Label:
                id: Wifi

                text: 'WiFi'
                font_size: FONTSIZE.NM
                color: COLOUR.PRIMARY

        # Back
        Button:
            id: Back
            pos: (656, 24)              # Position in Pixels
            size_hint_max: (120, 120)   # Size in Pixels
            
            # text: 'Settings'
            background_normal: ICON.BACK
            
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'home'
