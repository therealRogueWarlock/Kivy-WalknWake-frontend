#: import COLOUR theme.Colours
#: import ICON theme.Icons
#: import FONTSIZE theme.Text
#: import RESOLUTION theme.Size
#: include views/components/back_button.kv
#: include views/components/header.kv
#: include views/components/background.kv
<Settings>:
    Background:
        Header:
            id: Header

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.3,'center_y': 0.5}
            spacing: '24px'
            adaptive_size: True

            MDTextButton:
                text: 'Alarms'
                font_style: 'H5'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'alarms'

            MDTextButton:
                text: 'Timezone'
                font_style: 'H5'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'time_settings'

            MDTextButton:
                text: 'Wifi'
                font_style: 'H5'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'wifi_settings'

        # Back
        BackButton:
            icon: ICON.HOME

            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'home'

        # Debug Button
        Button:
            text: 'Camera'
            size_hint_max: (32, 32)
            pos: (32, 32)

            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'camera'
