#:import COLOUR theme.Colours
#:import ICONS theme.Icons
<Camera>

    FloatLayout:
        Image:
            id: ImageView
            nocache: True



        MDLabel:
            id: TargetText
            size_hint_max: (None, self.height)
            pos_hint: {'center_x': 0.5,'top': 1}
            halign: 'center'
            
            text: "Target: ???"
            font_style: 'H4'
            color: COLOUR.ACCENT
            
            
            md_bg_color: 'magenta'

        MDLabel:
            id: ProcessingLabel
            visible: False
            size_hint_max: (None, self.height)
            pos_hint: {'center_x': 0.5,'top': 0.7}
            halign: 'center'

            text: "Processing image!"
            font_style: 'H4'
            color: COLOUR.ACCENT


            md_bg_color: 'magenta'

        IconButton:
            text: 'Capture'
            icon: ICONS.ROUND_BUTTON_ENABLED

            on_release:
                icon: ICONS.ROUND_BUTTON_DISABLED
                root.capture()


