#:import COLOUR theme.Colours
<Camera>

    FloatLayout:
        Image:
            id: imageView



        MDLabel:
            size_hint_max: (None, self.height)
            pos_hint: {'center_x': 0.5,'top': 0.9}
            halign: 'center'
            
            text: "Target: ???"
            font_style: 'H4'
            color: COLOUR.ACCENT
            
            
            md_bg_color: 'magenta'

        BackButton:
            text: 'Capture'
            icon: 'plus'

            on_press:
                root.capture()


