#:kivy 1.0
#: import COLOUR theme.Colour
#: import ICON theme.Icons
#: import FONTSIZE theme.Text
#: import RESOLUTION theme.Size
#: include views/components/background.kv
#: include views/components/back_button.kv
<TimeSettings>:
    Background:
        Header:
            id: Header

        Spinner:
            id: Timezones
            size_hint_max: (130, FONTSIZE.XL)
            pos: (400, 200)
            background_color: COLOUR.ACCENT
            background_normal: ICON.DROPDOWN
            background_down: ICON.DROPDOWN
            text: 'Click Here'
            # ================================= #
            # Programatically addeded timezones #
            # ================================= #
            on_text:
                root.spinner_clicked(root.ids.Timezones.text)

        BackButton:
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'settings'
