#:kivy 1.0
#:include views/components/back_button.kv
#:include views/components/background.kv
#:include views/components/header.kv
<TimeSettings>:
    Background:
        Header:
            id: Header

        MDLabel:
            size_hint_max: (self.width, self.height)
            text: 'Selected: '
            font_style: 'H5'
            pos: (300, 220)

        MDDropDownItem:
            id: SelectedTimezone
            size_hint_max: (self.width, self.height)
            pos: (420, 255)
            text: 'Select'
            
            on_press:
                root.open_menu()

        BackButton:
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'settings'
