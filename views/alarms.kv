#: import COLOUR theme.Colours
#: import ICON theme.Icons
#: import RESOLUTION theme.Size
#:include views/components/day_button.kv
#:include views/components/back_button.kv
#:include views/components/header.kv
<Alarms>:
    Background:
        Header:
            id: Header

        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            spacing: '24px'
            adaptive_size: True

            DayButton:
                id: Monday
                text: 'M'

                on_press:
					root.go_to('monday')

            DayButton:
                id: Tuesday
                text: 'T'

                on_press:
					root.go_to('tuesday')

            DayButton:
                id: Wednesday
                text: 'W'

                on_press:
					root.go_to('wednesday')

            DayButton:
                id: Thursday
                text: 'T'

                on_press:
					root.go_to('thursday')

            DayButton:
                id: Friday
                text: 'F'

                on_press:
					root.go_to('friday')

            DayButton:
                id: Saturday
                text: 'S'

                on_press:
					root.go_to('saturday')

            DayButton:
                id: Sunday
                text: 'S'

                on_press:
					root.go_to('sunday')

        # New Alarm
        IconButton:
            icon: ICON.ADD
            pos: (536, 24)

            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'new_alarm'

        # Back
        BackButton:
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'settings'
