#:kivy 1.0
#: import COLOUR theme.Colour
#: import ICON theme.Icons
#: import FONTSIZE theme.Text
#: import RESOLUTION theme.Size
#: include views/components/day_button.kv
#: include views/components/header.kv
<SetAlarmFor>:
    FloatLayout:
        id: Background

        Header:
            id: Header
            
        BoxLayout:
            orientation: 'horizontal'
            pos: (0, (RESOLUTION.HEIGHT - 96)/2)
            size_hint_max: (RESOLUTION.WIDTH, 96)
            padding: (50, 0)

            DayButton:
                id: Monday
                text: 'M'

                on_release:
					root.toggle('monday')

            DayButton:
                id: Tuesday
                text: 'T'

                on_release:
					root.toggle('tuesday')

            DayButton:
                id: Wednesday
                text: 'W'

                on_release:
					root.toggle('wednesday')

            DayButton:
                id: Thursday
                text: 'T'

                on_release:
					root.toggle('thursday')

            DayButton:
                id: Friday
                text: 'F'

                on_release:
					root.toggle('friday')

            DayButton:
                id: Saturday
                text: 'S'

                on_release:
					root.toggle('saturday')

            DayButton:
                id: Sunday
                text: 'S'

                on_release:
					root.toggle('sunday')

        # Cancel
        Button:
            text: 'Cancel'

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'alarms'

        Button:
            text: 'Confirm'

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'alarms'