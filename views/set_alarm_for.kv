#:kivy 1.0
#: import COLOUR theme.Colour
#: import ICON theme.Icons
#: import FONTSIZE theme.Text
#: import RESOLUTION theme.Size
#: include views/components/day_button.kv
#: include views/components/header.kv
<SetAlarmFor>:
    FloatLayout:
        id: Background

        Header:
            id: Header
            
        BoxLayout:
            orientation: 'horizontal'
            pos: (0, (RESOLUTION.HEIGHT - 96)/2)
            size_hint_max: (RESOLUTION.WIDTH, 96)
            padding: (50, 0)

            DayButton:
                id: Monday
                text: 'M'

                on_release:
					root.toggle('Monday')

            DayButton:
                id: Tuesday
                text: 'T'

                on_release:
					root.toggle('Tuesday')

            DayButton:
                id: Wednesday
                text: 'W'

                on_release:
					root.toggle('Wednesday')

            DayButton:
                id: Thursday
                text: 'T'

                on_release:
					root.toggle('Thursday')

            DayButton:
                id: Friday
                text: 'F'

                on_release:
					root.toggle('Friday')

            DayButton:
                id: Saturday
                text: 'S'

                on_release:
					root.toggle('Saturday')

            DayButton:
                id: Sunday
                text: 'S'

                on_release:
					root.toggle('Sunday')

        # Cancel
        Button:
            background_normal: ICON.CANCEL
            background_down: ICON.CANCEL
            size_hint_max: (120, 120)
            pos: (536, 24)

            on_release:
                root.manager.transition.direction = 'down'
                root.manager.current = 'alarms'

        BackButton:
            background_normal: ICON.CONFIRM
            background_down: ICON.CONFIRM

            on_release:
                root.save_alarm()
                root.manager.transition.direction = 'down'
                root.manager.current = 'alarms'